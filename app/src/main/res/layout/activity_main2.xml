<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <TextView
            android:id="@+id/pergunta"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="se vc tem carne e osso e pensa, logo vc é um"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indice1" />

    <TextView
            android:id="@+id/indice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="43dp"
            android:text="Pergunta 1 :"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A alternativa correta é ?"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="301dp" />

    <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proxima>"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="497dp" />

    <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="94dp"
            android:layout_height="35dp"
            android:text="(A)"
            android:visibility="visible"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="320dp" />

    <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="(B)"
            android:visibility="visible"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="355dp" />

    <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="(C)"
            android:visibility="visible"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="390dp" />

    <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="(D)"
            android:visibility="visible"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="425dp" />

    <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="(E)"
            android:visibility="visible"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="460dp" />

</androidx.constraintlayout.widget.ConstraintLayout>