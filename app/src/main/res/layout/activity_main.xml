<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Geral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/GeralTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Quiz IT"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.215" />

    <EditText
            android:id="@+id/EntradaEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            tools:ignore="TouchTargetSizeCheck" />

    <EditText
            android:id="@+id/EntradaSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="115dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/GeralTitulo" />

    <Button
            android:id="@+id/buttonEntre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="28dp"
            android:text="Entre"
            app:layout_constraintEnd_toStartOf="@+id/buttonTestar1"
            app:layout_constraintTop_toBottomOf="@+id/EntradaSenha" />

    <Button
            android:id="@+id/buttonTestar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="Testar"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEntre1"
            app:layout_constraintEnd_toEndOf="@+id/EntradaSenha" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="52dp"
            android:text="Email:"
            app:layout_constraintBottom_toTopOf="@+id/EntradaSenha"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="1dp"
            android:text="Senha:"
            app:layout_constraintBottom_toBottomOf="@+id/EntradaSenha"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/btnProfessor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="68dp"
            android:text="area do professor>"
            app:layout_constraintStart_toStartOf="@+id/buttonEntre1"
            app:layout_constraintTop_toBottomOf="@+id/buttonEntre1" />

</androidx.constraintlayout.widget.ConstraintLayout>